generator client {
  provider = "prisma-client"
  output   = "../src/lib/server/prisma/generated"
}

datasource db {
  provider = "mysql"
}

model Process {
  id   String @id @default(cuid())
  name String

  commits Commit[]
  states  State[]
}

model Commit {
  id String @id @default(cuid())

  changes FieldValue[]

  parentId String?
  parent   Commit?  @relation(name: "hierarchy", fields: [parentId], references: [id], onDelete: Restrict)
  children Commit[] @relation(name: "hierarchy")

  processId String
  process   Process @relation(fields: [processId], references: [id])
  inputs    State[] @relation("InputStates")
  output    State?  @relation("OutputState")

  timestamp DateTime @default(now())

  @@index([parentId])
  @@index([processId])
}

model State {
  id String @id @default(cuid())

  processId String?
  process   Process? @relation(fields: [processId], references: [id])

  createdById String   @unique
  createdBy   Commit   @relation("OutputState", fields: [createdById], references: [id])
  usedBy      Commit[] @relation("InputStates")

  values FieldValue[]

  @@index([processId])
}

model Field {
  id     String       @id @default(cuid())
  name   String
  type   FieldType
  values FieldValue[]

  @@unique([name])
}

model FieldValue {
  id String @id @default(cuid())

  value Json

  fieldId String
  field   Field  @relation(fields: [fieldId], references: [id])

  commitId String
  commit   Commit  @relation(fields: [commitId], references: [id])
  states   State[]
}

enum FieldType {
  text
  number
}
