generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model Process {
  id   String @id @default(cuid())
  name String

  definitions AttributeDefinition[]

  commits Commit[]
}

model AttributeDefinition {
  id  String @id @default(cuid())
  key String

  // Métadonnées
  label     String? // "Vitesse de rotation"
  unit      String? // "rpm"
  desc      String? // "Vitesse de la tête de coupe"
  type      AttributeType // NUMBER, TEXT, ENUM...
  uiMapping String? // "gauge", "slider", "hidden"

  processes Process[]
}

enum AttributeType {
  MEASURE
  PARAMETER
  STATUS
  INFO
}

model Commit {
  id String @id @default(cuid())

  changes  Json
  snapshot Json?

  // Meta
  authorId  String?
  duration  Int?
  createdAt DateTime @default(now())

  // Hierarchy
  parentId String?
  parent   Commit?  @relation(name: "Hierarchy", fields: [parentId], references: [id], onDelete: Restrict)
  children Commit[] @relation(name: "Hierarchy")

  processId String
  process   Process @relation(fields: [processId], references: [id])

  // Flow
  inputs Commit[] @relation("CommitConnection")
  ouputs Commit[] @relation("CommitConnection")

  @@index([parentId])
  @@index([processId])
}
