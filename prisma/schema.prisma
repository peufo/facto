generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model Process {
  id   String @id @default(cuid())
  name String

  definitions AttributeDefinition[]

  commits Commit[]
  states  State[]
}

model AttributeDefinition {
  id  String @id @default(cuid())
  key String

  // Métadonnées
  label     String? // "Vitesse de rotation"
  unit      String? // "rpm"
  desc      String? // "Vitesse de la tête de coupe"
  type      AttributeType // NUMBER, TEXT, ENUM...
  uiMapping String? // "gauge", "slider", "hidden"

  processes Process[]
}

enum AttributeType {
  MEASURE
  PARAMETER
  STATUS
  INFO
}

model Commit {
  id String @id @default(cuid())

  changes Json

  parentId String?
  parent   Commit?  @relation(name: "Hierarchy", fields: [parentId], references: [id], onDelete: Restrict)
  children Commit[] @relation(name: "Hierarchy")

  processId String
  process   Process @relation(fields: [processId], references: [id])

  inputs State[] @relation("StatesToCommit")
  output State?  @relation("CommitToState")

  timestamp DateTime @default(now())

  @@index([parentId])
  @@index([processId])
}

model State {
  id String @id @default(cuid())

  processId String?
  process   Process? @relation(fields: [processId], references: [id])

  inputId String   @unique
  input   Commit   @relation("CommitToState", fields: [inputId], references: [id])
  outputs Commit[] @relation("StatesToCommit")

  snapshot Json?

  @@index([processId])
}
